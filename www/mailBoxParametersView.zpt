<html metal:use-macro="here/main_template/macros/master">
  <metal:block metal:fill-slot="main"
      tal:define="first_time request/first_time|nothing">
    <div class="message" tal:condition="first_time">
     Welcome to CPSWebMail this is the first time
      you launched it, blalalalalala (texte à externaliser)
    </div>

    <h2>MailBox Managment tasks</h2>
    <form action="reindexMailCatalog">
      <input type="submit" name="reindex" value="reindex mail catalog"/>
    </form>


    <h2>MailBox parameters</h2>
    <form name="parameters" action="editParameters.html" method="post">
      <table width="100%">

        <tal:block tal:repeat="parameter view/renderParametersForm">
        <tr>
          <td width="50%" align="right">
            <tal:block tal:replace="parameter/name"/>
          </td>
          <td width="50%" align="left">
            <input tal:attributes="type parameter/type;
                                   name python:parameter['name']+':'+parameter['ptype'];
                                   value parameter/value;"/>
          </td>
        </tr>
        </tal:block>
        <tr>
          <td align="center" colspan="2">
            <br/>
            <input type="submit" name="submit" value="submit" i18n:translate="value"/>
          </td>
        </tr>
      </table>

    </form>
    <br/>
    <h2>Adding a field</h2>
    <form name="add_parameter" action="addParameter.html" method="post">
      <table width="100%">
        <tal:block tal:repeat="parameter view/renderAddParamForm">
        <tr>
          <td width="50%" align="right">
            <tal:block tal:replace="parameter/name"/>
          </td>
          <td width="50%" align="left">
            <input tal:attributes="type parameter/type;
                                   name parameter/name;
                                   value parameter/value;"/>
          </td>
        </tr>

        </tal:block>
        <tr>
          <td align="center" colspan="2">
            <br/>
            <input type="submit" name="submit" value="submit" i18n:translate="value"/>
          </td>
        </tr>

      </table>
    </form>

  </metal:block>
</html>